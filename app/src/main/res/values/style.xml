<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    取消按钮-->
    <style name="dialog_cancel_button_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#756E98</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_rect_radius24_eff4ff</item>
    </style>

    <!--    确认按钮-->
    <style name="dialog_confirm_button_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <!--        9.0 以下隐藏阴影 -->
        <!--        <item name="android:elevation">4dp</item>-->
        <item name="android:background">@drawable/bg_rect_radius24_gradient_blue</item>
    </style>
</resources>